<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <div class="title-table title-lft">
                        <h2>Add New Wallet</h2>
                    </div>
                    <div class="my-account-section add-new-wallet-section">
                        <form action="{{constants.ACCESSURL}}users/addWallet" method="post"
                            onsubmit="addWalletSubmit.disabled = true; return true;">
                            <div class="wallet-img">
                                <img src="{{constants.ACCESSURL}}img/wallet-img.png" alt="">
                            </div>
                            <div class="form-group">
                                <input class="form-control" onkeypress="return minLengthCheck(event)" name="name"
                                    type="text" placeholder="Enter Name" required="">
                            </div>

                            <div class="update-btn">
                                <input class="btn btn-primary" type="submit" value="Save" name="addWalletSubmit">
                            </div>
                            <div class="update-btn">
                                <a href="{{constants.ACCESSURL}}users/wallets" class="btn btn-primary"> Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>