<div class="login-main-section">
    <div class="login-part reset-pw-part">
        <div class="login-logo">
            <a href="#"><img src="{{constants.ACCESSURL}}img/logo.png" alt=""></a>
        </div>
        <h1>The Abundance Coin</h1>
        <div class="login-form">
            <h2>Reset Password</h2>
            <form action="{{constants.ACCESSURL}}reset-password" method="post" class="ajax-reset-password">
                <input type="hidden" name="token" value="{{token}}" />
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group pw-fr">
                            <img src="/img/password-icon.png">
                            <input class="form-control" type="password" onkeypress="return minLengthCheck(event)"
                                name="password" placeholder="New Password" required="">
                        </div>
                        <div class="form-group pw-fr">
                            <img src="/img/password-icon.png">
                            <input class="form-control" type="password" onkeypress="return minLengthCheck(event)"
                                name="c_password" placeholder="Confirm New Password" required="">
                        </div>
                    </div>
                </div>
                <a href="" class="btn hide password-reset-successfully" data-toggle="modal"
                    data-target="#Modal-reset-password"></a>
                <div class="">
                    <button class="btn btn-primary" type="submit">
                        Reset
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

