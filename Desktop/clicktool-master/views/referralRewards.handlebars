                                    <div class="history-table table-refferal table-responsive">
                                        {{#ifCond reffral.referralTransaction.length '>' 0 }}
                                        <table class="footable table table-stripped statements" data-page-size="10"
                                            data-paging="true">
                                            <thead>
                                                <tr>
                                                    <th>Hash</th>
                                                    <th>User Name</th>
                                                    <th>Date</th>
                                                    <th>Token Count</th>
                                                    <th data-sort-ignore="true">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each reffral.referralTransaction}}
                                                <tr>
                                                    <td>{{this.txHash}}</td>
                                                    <td>{{this.userName}}</td>
                                                    <td>{{formatDate this.date}}</td>
                                                    <td>{{this.tokenCount}}</td>
                                                    <td><a href="{{ this.txURL }}" target="_blank">View On EtherScan</a>
                                                    </td>
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <td colspan="8">
                                                        <ul class="pagination pull-right"></ul>
                                                    </td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                        {{else}}
                                        <h3>No rewards found !!!</h3>
                                        {{/ifCond}}
                                    </div>


